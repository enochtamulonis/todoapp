<div class="relative pt-1">
  <div class="flex mb-2 items-center justify-between">
    <div class="flex w-full justify-between pt-2 px-2">
      <span class=" ml-2 text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-<%= @todo_list.badge_color %> border-2 border-<%= @todo_list.badge_color%>">
        <%= @todo_list.status %>
      </span>
      <p><%= @todo_list.percent_completed %>% complete (<%= @todo_list.completed_items %>/<%= @todo_list.total_items %> Todo Items)</p>

    </div>
    <div class="text-right">
      <span class="text-xs font-semibold inline-block text-purple-600">
      </span>
    </div>
  </div>
  <div class="overflow-hidden h-5 mb-4 text-xs flex rounded bg-purple-300">
    <div style="width: <%= @todo_list.percent_completed %>%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-<%=@todo_list.badge_color%>"></div>
  </div>
</div>
